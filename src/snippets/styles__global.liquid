      {{ variant | font_face: font_display: 'swap' }}
    {%- endif -%}
  {% endfor %}
  {%- unless settings.font_body ==  settings.font_heading -%}
    {% for variant in settings.font_heading.variants %}
      {%- if variant.weight == "300" or variant.weight == "400" or variant.weight == "600" or variant.weight == "700" or variant.weight == "900"-%}
        {{ variant | font_face: font_display: 'swap' }}
      {%- endif -%}
    {% endfor %}
  {%- endunless -%}
</style>
